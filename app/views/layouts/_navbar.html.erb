                  <li>
                    <%= link_to 'Empresas', companies_path  %>
                  </li>
                  <li>
                    <%= link_to 'Personas', people_path  %>
                  </li>

                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to destroy_administrator_session_path, method: :delete do %>
