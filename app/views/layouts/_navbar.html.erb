              <% elsif user_role_id(3) ||user_role_id(4) %>
                  <li>
                    <%= link_to 'Mis ofertas', my_opportunities_opportunities_path %>
                  </li>
              <% end %>

              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  Perfil
                  <span class="caret"></span>
                </a>

                <ul class="dropdown-menu dropdown-menu-fixed">
                  <% if user_role_id(2) %>
                      <!-- Actions for Students -->
                      <li>
                        <%= link_to 'Ver Perfil', student_path(current_user.id) %>
                      </li>
                      <li>
                        <%= link_to 'Editar Perfil', edit_user_path(current_user.id) %>
                      </li>

                  <% elsif user_role_id(3) %>
                      <!-- Actions for Company -->
                      <li>
                        <%= link_to 'Ver Perfil', company_path(current_user.id) %>
                      </li>
                      <li>
                        <%= link_to 'Editar Perfil', edit_user_path(current_user.id) %>
                      </li>
                  <% elsif user_role_id(4) %>
                      <!-- Actions for Person -->
                      <li>
                        <%= link_to 'Ver Perfil', person_path(current_user.id) %>
                      </li>
                      <li>
                        <%= link_to 'Editar Perfil', edit_user_path(current_user.id) %>
                      </li>
