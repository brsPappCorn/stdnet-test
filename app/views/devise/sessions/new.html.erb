<section class="devise-wrapper">
  <% if params[:studnet].to_i == 2 %>
      <div class="students-signup-header">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p>
                Iniciar sesión como estudiante
              </p>
            </div>
          </div>
        </div>
      </div>
  <% elsif params[:studnet].to_i == 3 || params[:studnet].to_i == 4 %>
      <div class="companies-signup-header">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p>
                Iniciar sesión como empresa / persona
              </p>
            </div>
          </div>
        </div>
      </div>
  <% else %>
      <div class="students-signup-header">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p>
                Iniciar sesión
              </p>
            </div>
          </div>
        </div>
      </div>
  <% end %>

  <!-- Sign In Form -->
  <div class="devise-signup-wrapper students-signup-wrapper">
    <div class="container sign-in-form">

      <% if params[:studnet].to_i == 2 %>
      <div class="row">
        <div class="col-md-12 text-center">
          <p>
            ¿Quieres publicar una oferta? Ingresa como
            <%= link_to 'empresa / persona', new_user_session_path(studnet: 3) %>
          </p>
        </div>
      </div>
      <% elsif params[:studnet].to_i == 3 || params[:studnet].to_i == 4 %>
          <div class="row">
            <div class="col-md-12 text-center">
              <p>
                ¿Quieres aplicar a una oferta? Ingresa como
                <%= link_to 'estudiante', new_user_session_path(studnet: 2) %>
              </p>
            </div>
          </div>
      <% else %>
          <div class="row">
            <div class="col-md-12 text-center">
              <p>
                Por favor ingresa tu correo y contraseña para iniciar sesión en la plataforma
              </p>
            </div>
          </div>
      <% end %>

      <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center">
          <!-- Form -->
          <%= render 'devise/sessions/form' %>

          <!-- Form -->

        </div>
      </div>

    </div>
  </div>
  <!-- ./Sign In Form -->
</section>










