<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, 'Correo electrónico' %><br />
      <%= f.text_field :email, autofocus: true, class: 'form-control input-width' %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Contraseña' %><br />
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control input-width' %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'Recordarme' %>
        </div>
    <% end -%>

    <div class="actions text-right">
      <%= f.submit 'Ingresar', class: 'btn btn-primary btn-studnet-basic' %>
    </div>
<% end %>

<div class="devise-links-color text-right">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <% if current_page?(new_user_session_path(studnet: 2)) %>
          <%= link_to 'Registrarme', new_registration_path(resource_name, studnet: 2) %><br />
      <% elsif current_page?(new_user_session_path(studnet: 3)) %>
          <%= link_to 'Registrarme', new_registration_path(resource_name, studnet: 3) %><br />
      <% elsif current_page?(new_user_session_path(studnet: 4)) %>
          <%= link_to 'Registrarme', new_registration_path(resource_name, studnet: 4) %><br />
      <% end %>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to 'Recuperar contraseña', new_password_path(resource_name) %><br />
  <% end -%>
</div>