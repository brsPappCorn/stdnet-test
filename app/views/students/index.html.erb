<section class="studNet-wrapper">
  <div class="container">

    <div class="row">
      <div class="col-md-12">

        <h1>Lista de estudiantes</h1>

        <table class="table">
          <thead>
          <tr>
            <th>Correo Usuario</th>
            <th>Universidad</th>
            <th>Carrera</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @students.each do |student| %>
              <tr>
                <td><%= student.user.email %></td>
                <% unless user_signed_in? %>
                    <td><%= student.definitive_university %></td>
                    <td><%= student.definitive_major %></td>
                <% end %>
                <td><%= link_to 'Show', student, class: 'btn btn-default btn-studnet-details' %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

      </div>
    </div>

  </div>
</section>