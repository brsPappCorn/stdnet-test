 <section class="devise-wrapper">
  <div class="devise-signup-wrapper students-signup-wrapper">

    <div class="sign-in-title">
      <div class="container">
        <div class="col-md-12">
          <h3>
            Iniciar sesión
          </h3>
        </div>
      </div>
    </div>

    <div class="container sign-in-form">

      <div class="row">
        <div class="col-md-12 text-center">
          <h3>
            Por favor ingresa tu correo y contraseña para iniciar sesión en la plataforma
          </h3>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :email, 'Correo electrónico' %><br />
                <%= f.text_field :email, autofocus: true, class: 'form-control input-width' %>
              </div>

              <div class="form-group">
                <%= f.label :password, 'Contraseña' %><br />
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control input-width' %>
              </div>

              <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, 'Recordarme' %>
                  </div>
              <% end -%>

              <div class="actions text-right">
                <%= f.submit 'Ingresar', class: 'btn btn-primary btn-studnet-basic' %>
              </div>
          <% end %>

          <div class="text-right">
            <%= render 'devise/shared/links' %>
          </div>

        </div>
      </div>

    </div>

  </div>
</section>