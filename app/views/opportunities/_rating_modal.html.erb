 <div class="modal fade" id="<%= "application-#{application.id}" %>" tabindex="-1" role="dialog" aria-labelledby="<%= "application-#{application.id}" %>Label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_tag rate_opportunity_user_path(applicant) do %>
          <%= hidden_field_tag :opportunity, @opportunity.id %>

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="<%= "application-#{application.id}" %>Label">Calificación de <%= applicant.full_name %></h4>
          </div>
          <div class="modal-body">
            <p>Seleccione la califiación a asignar a <%= applicant.full_name %>.</p>
            <%= select_tag :rating, options_for_select([1, 2, 3, 4, 5], { prompt: 'Por favor seleccione la opción' }), class: 'form-control input-width' %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            <%= submit_tag 'Calificar', class: 'btn btn-default btn-studnet-details' %>
          </div>
      <% end %>
    </div>
  </div>
</div>