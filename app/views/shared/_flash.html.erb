 <% unless flash.empty? %>
    <div class="row">
      <div class="span12 text-center">
        <% flash.each do |key, value| %>
            <% bt = button_tag('x', type: 'button', class: 'close', 'data-dismiss' => 'alert') %>
            <%= content_tag(:div, bt + value, class: "alert #{alert_class(key)} flash-messages") %>
        <% end %>
      </div>
    </div>
<% end %>