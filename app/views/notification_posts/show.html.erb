<p id="notice"><%= notice %></p>

<section class="devise-wrapper">
  <div class="companies-signup-header margin-bot-40">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p>
            Company Notifications
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="studNet-wrapper student-tab-wrapper padding-bot-40">
  <div class="container">

    <div class="row">
      <div class="col-md-10 col-md-offset-1 student-tab-content company-tab-content">

        <!-- Company Info -->
        <div class="row">
          <!-- Contact Info -->
          <div class="col-md-6">
            <h3>
              Detail
             </h3>

            <table class="table studNet-table">
              <tbody>

              <tr>
                <td>
                  <strong>Name:</strong>
                </td>
                <td>
                  <%= @notification_post.name %>
                </td>
              </tr>

              <tr>
                <td>
                  <strong>Body:</strong>
                </td>
                <td>
                  <%= @notification_post.body %>
                </td>
              </tr>

              <tr>
                <td>
                 <strong>User:</strong>
                </td>
                <td>
                  <%= @notification_post.user.first_name %>
                </td>
              </tr>

              </tbody>
            </table>

          </div>
          <!-- Company Info -->
        </div>
        <!-- ./Company Info -->
      </div>
    </div>

    <% if user_signed_in? %>
        <!-- Actions -->
        <div class="row">
          <div class="col-md-12 student-actions-wrapper text-center">
         
            <%#= link_to 'Editar perfil', edit_notification_post_path(@notification_post) , class: 'btn btn-primary btn-studnet-basic' %>

           
                 <%= link_to 'Edit Notification', edit_notification_post_path(@notification_post) %> 
       
          </div>
        </div>
        <!-- ./Actions-->
    <% end %>

  </div>
</section>