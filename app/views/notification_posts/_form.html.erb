<%= form_with(model: notification_post, local: true) do |form| %>
    <%= render partial: 'shared/error_messages', locals: { object: @notification_post } %>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :name %>
           <%= form.text_field :name, id: :notification_post_name, class: 'form-control input-width' %>
        </div>

        <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, id: :notification_post_body , class: 'form-control input-width' %>
        </div>
        </div>
</div>
        
    <div class="row">
      <div class="col-md-12 text-center">
       <%= form.hidden_field :user_id, id: :notification_post_user_id %>
        <div class="actions">
           <%= form.submit 'Crear Notification', class: 'btn btn-primary btn-studnet-basic' %>
        </div>
      </div>
    </div>

<% end %>
