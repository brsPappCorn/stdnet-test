<section class="studNet-wrapper">
  <div class="container">

    <div class="row">
      <div class="col-md-12">
        <div class="status-label">
        	<% if @transaction_state == "APPROVED"%>
        		<h1 class=" status approved"> TRANSACTION APPROVED </h1>
        	<% else %>
        		<h1 class=" status failed">TRANSACTION FAILED</h1>
        	<% end %>
        </div>
      </div>
    </div>
  </div>
</section>


<style type="text/css">
.approved{
	color: green;
}
.failed{
	color: red;
}
.status-label{
	text-align: center;
  padding-top: 100px;
  padding-bottom: 100px;
}
</style>