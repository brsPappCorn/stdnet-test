<section class="studNet-wrapper">
  <div class="container">

    <div class="row">
      <div class="col-md-12">

        <h1>Lista de compañías</h1>

        <table class="table">
          <thead>
          <tr>
            <th>User Email</th>
            <th>Company Name</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @companies.each do |company| %>
              <tr>
                <td>
                  <%= company.user.email %>
                </td>
                <td><%= company.company_name %></td>

                <td><%= link_to 'Show', company, class: 'btn btn-default btn-studnet-details' %><% session[:showAdmin]= true %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <%= paginate @companies %>

      </div>
    </div>

  </div>
</section>
