<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User ID</th>
      <th>User Email</th>
      <th>Role ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.company_name %></td>
        <td><%= company.user.id %></td>
        <td>
          <%# TODO: Create If statement for verification of existence so there is no conflict rendering the view due to a nil? or blank? %>
          <%= company.user.email %>
        </td>
        <td>
          <%= company.user.role_id %>
        </td>

        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

