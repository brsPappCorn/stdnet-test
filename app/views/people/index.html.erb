<section class="studNet-wrapper">
  <div class="container">

    <div class="row">
      <div class="col-md-12">

        <h1>Lista de personas</h1>

        <table class="table">
          <thead>
          <tr>
            <th>User Email</th>
            <th>Occupation</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @people.each do |person| %>
              <tr>
                <td><%= person.user.email %></td>
                <td><%= person.occupation %></td>
                <td><%= link_to 'Show', person, class: 'btn btn-default btn-studnet-details' %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <%= paginate @people %>

      </div>
    </div>

  </div>
</section>
