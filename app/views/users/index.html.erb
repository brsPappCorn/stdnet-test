<section class="studNet-wrapper">
  <div class="container">

    <div class="row">
      <div class="col-md-12">

        <h1>
          Lista de Usuarios
        </h1>

        <table class="table">
          <thead>
          <tr>
            <th>
              Correo Electrónico
            </th>
            <th>
              Nombre(s)
            </th>
            <th>
              Apellidos
            </th>
            <th>
              Ciudad
            </th>
            <th>
              País
            </th>
            <th>
              Rol
            </th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <%= user.first_name %>
                </td>
                <td>
                  <%= user.last_name %>
                </td>
                <td>
                  <% unless user.city_id.nil? %>
                      <%= user.city.city_name %>
                  <% end %>
                </td>
                <td>
                  <% unless user.country_id.nil? %>
                      <%= user.country.country_name %>
                  <% end %>
                </td>
                <td>
                  <%= user.role_name %>
                </td>
                <td><%= link_to 'Show', role_show_route(user), class: 'btn btn-default btn-studnet-details' %></td>
                <td><%= link_to 'Eliminar', user, class: 'btn btn-default btn-studnet-details', method: :delete, data: { confirm: '¿Está seguro?' } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

      </div>
    </div>

  </div>
</section>