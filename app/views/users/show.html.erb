<section class="studNet-wrapper profile-wrapper">
  <div class="container">

    <div class="row">
      <div class="col-md-8 col-md-offset-2">

        <div class="tabbable student-tab-wrapper">
          <!--  -->
          <ul class="nav nav-tabs student-nav-tabs">
            <li class="active">
              <a href="#pane1" data-toggle="tab">
                Información personal y educación
              </a>
            </li>

            <li>
              <a href="#pane2" data-toggle="tab">
                Experiencia laboral
              </a>
            </li>

            <li>
              <a href="#pane3" data-toggle="tab">
                Habilidades
              </a>
            </li>

            <li>
              <a href="#pane4" data-toggle="tab">
                Descripción
              </a>
            </li>
            <li>
              <a href="#pane5" data-toggle="tab">
                Tab 5
              </a>
            </li>
          </ul>


          <div class="tab-content student-tab-content">
            <!-- Personal Information -->
            <div id="pane1" class="tab-pane active">

              <div class="row">
                <div class="col-md-6">
                  <h3>
                    Información Personal
                    <%= link_to info_basica_path do |link| %>
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true" id="glyphiconPencilSize"></span>
                    <% end %>
                  </h3>
                  <p>
                    Nombre(s): <%= @user.first_name %> <br>
                    Apellidos: <%= @user.last_name %> <br>
                    Fecha de Nacimiento: <%= @user.date_of_birth.strftime('%d/%m/%Y ') %> <br>
                    Número de documento: <%= @user.document_number %> <br>
                    Teléfono de contacto: <%= @user.mobile_phone %> <br>
                    Ciudad: <%= @user.city.city_name %> <br>
                    País: <%= @user.country.country_name %>
                  </p>
                </div>

                <div class="col-md-6">
                  <h3>
                    Educación
                  </h3>
                  <p>
                    Universidad: <%= @user.student.university.university_name %> <br>
                    Carrera: <%= @user.student.major.major_name %> <br>
                    Nivel: <!-- TODO: Update Student model to include empty attribute listed below --> <br>
                    Otra carrera(s):                      <br>
                    Ultimo semestre cursado:              <br>
                    Promedio académico acumulado:         <br>
                    Intercambio: SI/NO tipo de respuesta  <br>
                    Pais de intercambio:                  <br>
                    Universidad de intercambio:           <br>
                    Colegio del que te graduaste:
                  </p>
                </div>
              </div>

            </div>

            <!-- Experience -->
            <div id="pane2" class="tab-pane">

            </div>

            <!-- Skills -->
            <div id="pane3" class="tab-pane">

            </div>

            <!-- Description -->
            <div id="pane4" class="tab-pane">

            </div>

            <!-- Tab 5 -->
            <div id="pane5" class="tab-pane">

            </div>
          </div><!-- /.tab-content -->
        </div><!-- /.tabbable -->


      </div>
    </div>

  </div>
</section>


