<section class="devise-wrapper">

  <!-- Sign Up Account Type Selection -->
  <% if current_page?(new_user_registration_path(studnet: 2)) || current_page?(new_user_registration_path(studnet: 3)) || current_page?(new_user_registration_path(studnet: 4)) %>

  <% else %>
      <div class="container sign-up-select-account text-center">

        <div class="row margin-top-20">
          <!-- Sign Up Student SignUp -->
          <div class="col-md-4">
            <div class="sign-up-select-account-students"></div>
            <h4>
              Estudiantes
            </h4>

            <p>
              <%= link_to 'Registrarse', new_user_registration_path(studnet: 2), class: 'btn btn-primary btn-studnet-basic' %>
            </p>
          </div>
          <!-- ./Sign Up Student SignUp -->

          <!-- Sign Up Company SignUp -->
          <div class="col-md-4">
            <div class="sign-up-select-account-companies"></div>
            <h4>
              Empresas
            </h4>

            <p>
              <%= link_to 'Registrarse', new_user_registration_path(studnet: 3), class: 'btn btn-primary btn-studnet-basic' %>
            </p>
          </div>
          <!-- ./Sign Up Company SignUp -->

          <!-- Sign Up Person SignUp -->
          <div class="col-md-4">
            <div class="sign-up-select-account-people"></div>
            <h4>
              Personas
            </h4>

            <p>
              <%= link_to 'Registrarse', new_user_registration_path(studnet: 4), class: 'btn btn-primary btn-studnet-basic' %>
            </p>
          </div>
          <!-- ./Sign Up Person SignUp -->
        </div>

      </div>
  <% end %>
  <!-- ./Sign Up Account Type Selection -->

  <!-- Sign Up Form -->
  <% if params[:studnet].to_i == 2 %>
      <div class="students-signup-header">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p>
                Registrarte como estudiante
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="devise-signup-wrapper students-signup-wrapper">
        <div class="container">

          <div class="row">
            <div class="col-md-12 text-center">
              <p>
                ¿Quieres publicar una oferta? Regístrate como
                <%= link_to 'empresa / persona', new_user_registration_path(studnet: 3) %>
              </p>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center register-form">
              <%= render 'devise/registrations/form' %>
            </div>
          </div>

        </div>
      </div>
  <% elsif params[:studnet].to_i == 3 %>
      <div class="companies-signup-header">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p>
                Registrarte como empresa / persona
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="devise-signup-wrapper companies-signup-wrapper">
        <div class="container">

          <div class="row">
            <div class="col-md-12 text-center">
              <p>
                ¿Quieres aplicar a una oferta? Regístrate como estudiante
                <%= link_to 'empresa / persona', new_user_registration_path(studnet: 2) %>
              </p>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center register-form">
              <%= render 'devise/registrations/form' %>
            </div>
          </div>

        </div>
      </div>
  <% elsif params[:studnet].to_i == 4 %>
      <div class="companies-signup-header">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p>
                Registrarte como empresa / persona
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="devise-signup-wrapper people-signup-wrapper">
        <div class="container">

          <div class="row">
            <div class="col-md-12">
              <p>
                ¿Quieres aplicar a una oferta? Regístrate como estudiante
                <%= link_to 'empresa / persona', new_user_registration_path(studnet: 2) %>
              </p>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center register-form">
              <%= render 'devise/registrations/form' %>
            </div>
          </div>

        </div>
      </div>
  <% end %>
  <!-- ./Sign Up Form -->

</section>

